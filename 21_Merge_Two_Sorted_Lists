/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {

    //19ms
    public ListNode mergeTwoLists(ListNode l1, ListNode l2) {
        ListNode i = l1;
        ListNode j = l2;
        ListNode res = new ListNode(0); //dump head;
        ListNode idx = res;
        while (i != null || j != null) {
            Integer v1 = i != null ? i.val : null;
            Integer v2 = j != null ? j.val : null;
            if (v1 == null) {
                idx.next = new ListNode(v2);
                j = j.next;
            } else if (v2 == null) {
                idx.next = new ListNode(v1);
                i = i.next;
            } else if (v1 <= v2) {
                idx.next = new ListNode(v1);
                i = i.next;
            } else {
                idx.next = new ListNode(v2);
                j = j.next;
            }
            //move index of resule list
            idx = idx.next;
        }
        return res.next;
    }
}
